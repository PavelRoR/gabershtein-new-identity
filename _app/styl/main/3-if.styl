.general-img-if-1
	left 0
	top -50px
	z-index 2
.general-img-if-2
	right -50px
	bottom 200px
	z-index 2
.if-items
	display flex
	align-items: flex-start
	justify-content center
	flex-direction row
	&:last-of-type
		justify-content: space-around
	@media screen and (max-width 991px)
		flex-wrap: wrap
.if-item
	width 100%
	max-width 280px
	margin 0 0 50px
	position relative
	z-index 30
	@media screen and (max-width 560px)
		margin-bottom: 35px
		max-width none
	&-img
		display block
		margin 0 auto 10px
	&-text
		text-align center
		span
			font-weight: bold
.general-title-if
	@media screen and (max-width 560px)
		margin 35px 0 50px
	@media screen and (max-width 386px)
		margin 0 0 35px