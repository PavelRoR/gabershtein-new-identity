#main
	padding 10px 0 0
	background #F5F9F9 url(../img/backs/main.png) no-repeat center top
	background-size: cover
	@media screen and (max-width 560px)
		text-align center
.main
	&-logo
		@media screen and (max-width 560px)
			width 55px
	&-pre
		font-weight: 500
		letter-spacing: 0.3em;
		text-transform: uppercase;
		color: #A4A4A4;
		margin-top: 110px
		@media screen and (max-width 991px)
			margin-top: 50px
		@media screen and (max-width 560px)
			font-size: 14px
			margin-top: 30px
	&-title
		font-family: B
		font-weight: 400;
		font-size: 140px;
		line-height: 60%;
		text-transform: uppercase;
		color: #B0CBAA;
		margin 20px 0 10px
		@media screen and (max-width 991px)
			font-size: 113px
		@media screen and (max-width 560px)
			font-size: 80px
		@media screen and (max-width 386px)
			font-size: 60px
		small
			display block
			font-size: 60px
			color #4D4D4D
			@media screen and (max-width 991px)
				font-size: 49px
			@media screen and (max-width 560px)
				font-size: 35px
			@media screen and (max-width 386px)
				font-size: 30px
	&-subtitle
		font-size: 18px
		color: #4D4D4D;
		margin-bottom: 55px
		width 100%
		max-width 300px
		@media screen and (max-width 991px)
			margin-bottom: 25px
		@media screen and (max-width 560px)
			max-width none
	&-info
		position absolute
		display inline-block
		padding 30px 20px
		background-color #fff
		border-radius: 9px;
		text-align center
		top 0
		left 180px
		z-index 90
		@media screen and (max-width 991px)
			position: static
			margin-bottom: 35px
			border: 2px solid #F6A1A2
		@media screen and (max-width 560px)
			padding 20px
		&-date
			font-family: B
			font-size: 25px
			letter-spacing: 0.015em;
			text-transform: uppercase;
			color: #4D4D4D;
			@media screen and (max-width 560px)
				font-size: 20px
		&-text
			font-size: 16px
			letter-spacing: 0.015em;
			color: #4D4D4D;
		&-img
			display block
			width auto
	&-img-1
		@media screen and (max-width 1199px)
			position relative
			left -50px
			top 0
		@media screen and (max-width 991px)
			width 100%
			max-width 756px
			margin 20px auto 0
			left auto
.general-img-main
	top 50px
	left 300px
	@media screen and (max-width 991px)
		top 0
		left 100px
	@media screen and (max-width 560px)
		width 250px
		top 60px
	@media screen and (max-width 386px)
		top 0