.revs-slider.slick-dotted.slick-slider
.revs-slider-text.slick-dotted.slick-slider
	width 100%
	// max-width 1340px
	margin 0 auto
	position relative
	z-index 50
	@media screen and (max-width 560px)
		margin-bottom: 100px
	.slick-track
		padding-bottom: 20px
	.slick-center
		transform scale(1.08)
	.slick-arrow
		height 20px
		width 100px
		top -50px
		// bottom: -90px
	.slick-prev
	.slick-next
		&:before
			width 100%
			height 100%
			border-radius: 0
			display block
			line-height: 46px
			background-color: transparent;
			text-align center
			color #B0CBAA
			font-size: 60px
			opacity 1
			transition: all .3s ease
			// border: 1px solid #B0CBAA;;
			font-weight: normal
		&:hover
			&:before
				background-color: transparent
				color #B0CBAA;
		left 43%
	.slick-next
		left auto
		right 43%
.revs-slider-text.slick-dotted.slick-slider
	margin: 50px 0 150px
	@media screen and (max-width 991px)
		margin: 60px 0
.slick-dots
	left 0
	text-align center
	bottom: -30px
	right 0
	margin 0 auto
	li
		width 25px
		height 25px
		border-radius: 50px
		border: 2px solid #B0CBAA;
		transition: all .3s ease
		margin 0 2px
		overflow hidden
		button
			transition: all .3s ease
			width 100%
			height 100%
			background-color: transparent
			padding 0
			&:before
				content: none
		&.slick-active
			margin: 0 5px
			transform: scale(1.1)
			button
				background-color: #B0CBAA;
.text-rev-img
	position relative
	// z-index 30
	width 100%
	max-width 560px
	display block
	margin 0 auto
	background: #BCE2E6;
	object-fit: contain
	object-position: center
	height 350px
	border-radius: 5px
	@media screen and (max-width 991px)
		height 200px
	@media screen and (max-width 768px)
		height 300px
	@media screen and (max-width 386px)
		height: 200px
.text-rev-link
	padding 20px
.video-revs-arrows-1
.video-revs-arrows-2
	position absolute
	width 110px
	top 100px
	left 0
	right 0
	margin 0 auto
	z-index 100
	@media screen and (max-width 560px)
		top 90px
	@media screen and (max-width 386px)
		top 80px
.slick-next, .slick-prev
	width 160px
	height 60px
.slick-next:before
.slick-prev:before
	color: #B0CBAA;
	font-size: 60px
	font-weight: normal
	transition: all .3s ease
	opacity 1
.slick-next:hover:before
.slick-prev:hover:before
	color: #B0CBAA + 20%
.slick-slide
.slick-center
	transition: all .3s ease