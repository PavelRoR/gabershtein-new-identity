#price
	padding 100px 0
	position relative
	background: url('../img/backs/if.svg') no-repeat center
	background-size: cover
	@media screen and (max-width 560px)
		padding 90px 0
.price-container
	width 100%
	max-width 400px
	margin 0 auto 50px
	border-radius: 20px
	border: 2px solid #F69D9F
	padding 35px
	background-color #fff
	@media screen and (max-width 991px)
		margin-bottom: 35px
	@media screen and (max-width 560px)
		margin-bottom: 20px
		padding 20px
.cost
	text-align center
	font-size: 26px
	text-transform uppercase
	margin 20px 0 25px
	line-height: 200%
	@media screen and (max-width 560px)
		font-size: 22px
		margin 15px 0 20px
	span
		display block
		font-family: B
		font-size: 66px
		color #B0CBAA
		@media screen and (max-width 560px)
			font-size: 46px
.price-text
	text-align center
	font-size: 26px
	@media screen and (max-width 560px)
		font-size: 20px
	.date
		display inline-block
		padding 3px
		background-color: yellow
		font-weight: bold
		border-radius: 10px
	.bold
		font-weight: bold