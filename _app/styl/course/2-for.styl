#for
	padding 200px 0 100px
	position relative
	// background: url('../img/backs/if.svg') no-repeat center
	// background-size: cover
	@media screen and (max-width 991px)
		padding 90px 0
	@media screen and (max-width 560px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
.general-img-for
	width 100%
	top -12%
	left 0
	right 0
	display block
	margin 0 auto
	z-index 200
	@media screen and (max-width 1199px)
		top -10%
	@media screen and (max-width 991px)
		display none
.general-img-for-1
	left 0
	top -50px
	z-index 2
.general-img-for-2
	right -50px
	bottom 200px
	z-index 2
.for-items
	display flex
	align-items: flex-start
	justify-content space-between
	flex-direction row
	@media screen and (max-width 991px)
		flex-wrap: wrap
		justify-content: space-around
.for-item
	width 100%
	max-width 260px
	margin 0 0 50px
	position relative
	z-index 30
	@media screen and (max-width 560px)
		margin-bottom: 35px
		max-width none
	&-img
		display block
		margin 0 auto 10px
	&-text
		text-align center
		span
			font-weight: bold