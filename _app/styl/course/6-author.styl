#author
	padding 100px 0
	background: url('../img/backs/author.png') no-repeat center left
	background-size: cover
	position relative
	z-index 10
	@media screen and (max-width 991px)
		padding 0
.author-img
	position absolute
	right 100px
	bottom: 0
	@media screen and (max-width 1199px)
		right 0
	@media screen and (max-width 991px)
		position static
		display block
		width 100%
		max-width 510px
		margin 0 auto 35px
.author-info
	background: url('../img/images/author.png') no-repeat center right
	// background-size: cover
	min-height 633px
	width 500px
	position relative
	top 0
	left 200px
	@media screen and (max-width 1199px)
		left 100px
	@media screen and (max-width 991px)
		width 100%
		left 0
		background: none
		min-height 1px
.general-list-author
	padding-top: 50px
	@media screen and (max-width 991px)
		padding-top: 0
	li
		text-align right
		padding 0 25px 0 0
		background-position: center right
		max-width 250px
		margin-bottom: 30px
		&:first-child
			margin-left: 58px
		&:nth-child(2)
			margin-left: 2px
		&:nth-child(3)
			margin-left: -24px
		&:nth-child(4)
			margin-left: -43px
		&:nth-child(5)
			margin-left: -48px
		&:nth-child(6)
			margin-left: -35px
		&:last-child
			margin-left: 3px
		@media screen and (max-width 991px)
			text-align: left
			padding 0 0 20px 25px
			margin-bottom: 20px
			position relative
			margin-bottom: 0
			margin-left: 0 !important
			background-position: top left
			max-width none
			&:before
				content: ''
				display block
				position absolute
				width 2px
				height: calc(100% - 20px);
				top: 20px;
				left: 9px;
				background-color: #F6A1A2
			&:last-child
				&:before
					content: none